                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:layout_weight="1">

                </ImageView>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_message_24"
                    android:layout_weight="1">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
